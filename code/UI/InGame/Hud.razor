@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root class="@(GameManager.IsPaused ? "open" : "")">
	<HudTimer />
	<LeanDisplay />
	<MapTimes />
	<Speedo />
	<FrenzyUI />
</root>

@code {

	protected override void OnStart()
	{
		base.OnStart();
		if (Scene.GetAllComponents<TutorialMap>().FirstOrDefault().ShowTutorial)
		{
			AddClass("hide");
		}
    }

	public void ShowHud()
	{
		RemoveClass("hide");
	}

	protected override int BuildHash() => System.HashCode.Combine(GameManager.IsPaused);
}
