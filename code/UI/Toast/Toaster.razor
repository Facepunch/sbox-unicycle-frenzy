
@inherits Panel

<root></root>

@code {
    static Toaster Current;

    public Toaster()
    {
        Current = this;
    }

    public static void Toast(string message, ToastTypes type)
    {
        Current?.AddChild(new Toast()
            {
                Type = type,
                Message = message
            });
    }

    public enum ToastTypes
    {
        Simple,
        Celebrate,
        Affirm,
        Award,
        Error
    }
}
