
@inherits Panel;

<style>
    .icon {
        background-image: url(@Achievement?.Thumbnail);
    }
</style>

<root>

    <div class="icon"></div>
    <div class="details">
        <label class="title">@Achievement?.DisplayName</label>
        <label class="description">@Achievement?.Description</label>
    </div>
    <div style="flex-grow: 1;"></div>
    <div class="status">
        <label class="unachieved">UNACHIEVED</label>
        <label class="achieved">ACHIEVED</label>
    </div>

</root>

@code {
    internal Achievement Achievement { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        if (Achievement == null) return;

        SetClass("is-completed", Achievement.IsCompleted());
    }
}
